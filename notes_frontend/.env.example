# Frontend configuration example. Copy to .env and adjust as needed.

# If provided, the app will call this backend for notes CRUD.
# If omitted or empty, the app uses an in-memory store with seed data.
REACT_APP_API_BASE=http://localhost:8080

# The app runs on port 3000 in this environment. Override only if your setup differs.
REACT_APP_PORT=3000

# Optional environment flags used by container
REACT_APP_NODE_ENV=development
REACT_APP_ENABLE_SOURCE_MAPS=true
REACT_APP_LOG_LEVEL=info
